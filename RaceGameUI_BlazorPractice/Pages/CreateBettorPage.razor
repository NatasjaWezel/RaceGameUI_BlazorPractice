<h3>Component</h3>

<div class="row box">
                <h3>Join in on the fun!</h3>
                <p style="display:inline-block">Add a bettor here. Investment can be between @RaceTrackService.minInvestment and @RaceTrackService.maxInvestment.</p>

                <div style="width:20%;display:inline">
                    <label for="NewPlayerName">Name: </label>
                    <input type="text" id="NewPlayerName" @bind="@newPlayerName">
                </div>

                <div style="width:20%;display:inline">
                    <label for="newPlayerStartCash"> Starting Cash:</label>
                    <input type="number" id="NewPlayerStartCash" @bind="@newPlayerStartCash" 
                        min=@RaceTrackService.minInvestment max=@RaceTrackService.maxInvestment>
                </div>

                <br />
                <button class="btn btn-secondary btn-sm" @onclick="CreateBettor">Add player</button>
           </div>

@code {
    private string newPlayerName = "";
    private int newPlayerStartCash = 50;

